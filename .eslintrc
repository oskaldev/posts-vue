{
	"root": true,
	"env": {
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:vue/vue3-recommended",
		"plugin:prettier/recommended"
	],
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module"
	},
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"singleQuote": true,
				"semi": false,
				"bracketSameLine": false,
				"htmlWhitespaceSensitivity": "strict"
			}
		],
		"vue/singleline-html-element-content-newline": "off",
		"vue/max-attributes-per-line": [
			"error",
			{
				"singleline": 1,
				"multiline": 1
			}
		],
		"vue/html-indent": [
			"error",
			"tab",
			{
				"attribute": 1,
				"baseIndent": 1,
				"closeBracket": 0,
				"alignAttributesVertically": true
			}
		]
	}
}